<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Definir colores principales -->
        <item name="colorPrimary">@color/bluelight</item>
        <item name="colorPrimaryDark">@color/bluedark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Estilos del Spinner -->
    <style name="CustomSpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:background">#2C8EF9</item>
        <item name="android:padding">12dp</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:popupBackground">#2C8EF9</item>
        <item name="android:dropDownVerticalOffset">48dp</item>
    </style>

    <!-- Estilo personalizado para botones -->
    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/bluedark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
    </style>
    <style name="CustomButtonStyle2" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/bluedark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ButtonHeader">
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <!-- Estilo personalizado para Paneles -->
    <style name="PanelStyle">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/rounded_box</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <!-- Estilo personalizado para Textbox -->
    <style name="TextboxStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHint">@color/whitealpha</item>
        <item name="android:padding">15dp</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/efecto_select</item>
    </style>
    <style name="TextboxStyle2">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHint">@color/whitealpha</item>
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/efecto_select</item>
        <item name="backgroundTint">@color/blackalpha</item>
    </style>

    <style name="Titulo">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="Subtitulo">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="Parrafo">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColorHint">@color/whitealpha</item>
    </style>
</resources>